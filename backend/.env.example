# EcoInsight Backend Environment Configuration

# Server Configuration
NODE_ENV=development
PORT=3001
ALLOWED_ORIGINS=http://localhost:3000,http://localhost:3001

# Database Configuration
MONGODB_URI=mongodb://admin:ecoinsight2024@localhost:27017/ecoinsight?authSource=admin
TIMESCALEDB_URI=postgresql://admin:ecoinsight2024@localhost:5432/ecoinsight_timeseries
REDIS_URI=redis://localhost:6379

# Security Configuration
JWT_SECRET=your_jwt_secret_key_here
API_RATE_LIMIT_WINDOW=900000
API_RATE_LIMIT_MAX=100

# External API Keys (Add your actual API keys here)
OPENWEATHER_API_KEY=your_openweather_api_key
EPA_API_KEY=your_epa_api_key
PURPLEAIR_API_KEY=your_purpleair_api_key
CARBON_INTERFACE_API_KEY=your_carbon_interface_api_key
OPENAQ_API_KEY=your_openaq_api_key

# Logging Configuration
LOG_LEVEL=info
LOG_FILE_PATH=./logs

# Cache Configuration
REDIS_TTL=3600
REDIS_MAX_KEYS=1000

# Performance Configuration
COMPRESSION_LEVEL=6
MAX_REQUEST_SIZE=10mb
